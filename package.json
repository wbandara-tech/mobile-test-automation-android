{
  "name": "mobile-test-automation-android",
  "version": "1.0.0",
  "description": "WebDriverIO + Appium mobile test automation framework for Android (Industry Standard)",
  "main": "index.js",
  "scripts": {
    "test": "npx wdio run wdio.conf.js",
    "test:smoke": "npx wdio run wdio.conf.js --suite smoke",
    "test:regression": "npx wdio run wdio.conf.js --suite regression",
    "test:sanity": "npx wdio run wdio.conf.js --suite sanity",
    "test:staging": "npx wdio run wdio.staging.conf.js",
    "test:browserstack": "npx wdio run wdio.browserstack.conf.js",
    "report:generate": "allure generate ./reports/allure-results --clean -o ./reports/allure-report",
    "report:open": "allure open ./reports/allure-report",
    "report": "npm run report:generate && npm run report:open",
    "clean": "rimraf reports/allure-results reports/allure-report reports/screenshots logs/*.log",
    "lint": "eslint test/**/*.js",
    "appium:install": "appium driver install uiautomator2",
    "appium:doctor": "npx appium-doctor --android"
  },
  "keywords": ["webdriverio", "appium", "android", "mobile-testing", "automation", "page-object-model"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@wdio/allure-reporter": "^9.24.0",
    "@wdio/appium-service": "^9.24.0",
    "@wdio/cli": "^9.24.0",
    "@wdio/local-runner": "^9.24.0",
    "@wdio/mocha-framework": "^9.24.0",
    "@wdio/spec-reporter": "^9.24.0",
    "allure-commandline": "^2.36.0",
    "appium": "^3.2.0",
    "appium-uiautomator2-driver": "^6.8.1",
    "chai": "^6.2.2",
    "dotenv": "^17.3.1",
    "log4js": "^6.9.1",
    "webdriverio": "^9.24.0",
    "winston": "^3.19.0"
  }
}
